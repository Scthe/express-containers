{
  "name": "express-containers",
  "description": "Run Express server inside QuickJS in a web browser. Live source code edit. Pefectly consistent and isolated. Broke something? Just refresh the page.",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Marcin Matuszczyk <marcin1113C@gmail.com>",
  "homepage": "https://scthe.github.io/express-containers/",
  "repository": "https://github.com/Scthe/express-containers",
  "main": "src/index.web.tsx",
  "packageManager": "yarn@4.2.2",
  "scripts": {
    "predev": "yarn clean && yarn gen:init-fs",
    "dev": "node esbuild-script.js --dev",
    "prebuild": "yarn clean && yarn gen:init-fs",
    "build": "node esbuild-script.js",
    "serve": "http-server build",
    "clean": "rimraf ./build/* || true",
    "run:gen:fs-zip": "node scripts/gen-init-fs-zip.mjs",
    "run:bundler": "tsx src/bundler-wasm/index.node.ts",
    "run:app": "tsx src/app/index.node.ts",
    "run:node": "yarn run:gen:fs-zip && yarn run:bundler && yarn run:app",
    "_UNUSED_build:bundler": "rollup -c packages/bundler/rollup.config.mjs",
    "_UNUSED_run:gen:fs-json": "node scripts/gen-init-fs-json.js",
    "lint": "eslint -c .eslintrc.json --ext .jsx,.js,.tsx,.ts src"
  },
  "imports": {
    "#my-quickjs-variant": {
      "types": "@jitl/quickjs-wasmfile-release-sync",
      "browser": "@jitl/quickjs-singlefile-browser-release-asyncify",
      "default": "@jitl/quickjs-wasmfile-release-sync"
    },
    "#my-rollup": {
      "types": "rollup/dist/rollup.d.ts",
      "browser": "@rollup/browser",
      "default": "rollup"
    }
  },
  "dependencies": {
    "@jitl/quickjs-singlefile-browser-release-asyncify": "^0.31.0",
    "@jitl/quickjs-singlefile-browser-release-sync": "^0.31.0",
    "@jitl/quickjs-wasmfile-debug-sync": "^0.31.0",
    "@rollup/browser": "^4.26.0",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-inject": "^5.0.5",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "classnames": "^2.5.1",
    "jszip": "^3.10.1",
    "pathe": "^1.1.2",
    "prismjs": "^1.29.0",
    "quickjs-emscripten": "^0.31.0",
    "react": "^18.3.1",
    "react-accessible-treeview": "^2.10.0",
    "react-dom": "^18.3.1",
    "react-icons": "^5.3.0",
    "react-resizable-panels": "^2.1.6",
    "react-simple-code-editor": "^0.14.1",
    "react-toastify": "^10.0.6",
    "rollup": "^4.24.4",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "use-debounce": "^10.0.4"
  },
  "devDependencies": {
    "@types/is-arguments": "^1",
    "@types/is-generator-function": "^1",
    "@types/node": "^22.9.0",
    "@types/prismjs": "^1",
    "@types/prop-types": "^15",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^8.12.1",
    "@typescript-eslint/parser": "^8.12.1",
    "autoprefixer": "^10.4.20",
    "esbuild": "^0.24.0",
    "esbuild-copy-static-files": "^0.1.0",
    "esbuild-style-plugin": "^1.6.3",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "postcss": "^8.4.49",
    "prop-types": "^15.8.1",
    "rimraf": "^5.0.7",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.4.5"
  }
}
